<div class="text-center mt-5 mb-5">
    <p><%= @ask.user.name %>さんのお悩み</p>
</div>
<div class="row">
    <div class="col-sm-10 offset-sm-1">
        <div class="card">
            <div class="card-head">
                <h4 class="card-title pt-3 pl-3 mb-2"><%= @ask.title %></h4>
            </div>
            <div class="card-body">
                <h5 class="card-text"><%= @ask.content %></h5>
                <p class="card-text">カテゴリー：<%= @ask.category.name %></p>
            </div>
        </div>
        <div class="text-center mt-5">
            <%= link_to '一覧に戻る', asks_path %>
        </div>
    </div>
</div>